---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
	<main>
		<div class="inicio">
			<div class="info">
				<strong class="title">Descubre el mundo ghibli</strong>
				<p>
					Lorem ipsum dolor sit amet consectetur adipisicing elit. Rem
					necessitatibus maiores sequi esse nemo, nam eius dignissimos
					vero delectus eum! Veritatis, deserunt. Error, id a.
				</p>
			</div>

			<div class="imagen">
				<img src="../../public/media/castle.png" alt="personajes">
			</div>
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 80%;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}


	/* INICIO */

	.inicio{
		max-width: 100%;
		height: 80vh;
		display: flex;
		align-items: center;
	}

	.inicio .info {
		max-width: 700px;
		
	}

	.info .title{
		font-size: 2.5rem;
		text-transform: uppercase;
	}


	.inicio .imagen{
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.inicio .imagen img{
		position: absolute;
		left: 100px;
		width: 700px;
		height: 700px;
	}

	.inicio .imagen img:hover{
		cursor: pointer;
		animation: mov 3.5s ease-out infinite;
	}

	@keyframes mov {
		0%{
			transform: translate(0, 0);
		}
		25%{
			transform: translate(20px, -10px);
		}
		100%{
			transform: translate(0,0);
		}
	}
</style>
